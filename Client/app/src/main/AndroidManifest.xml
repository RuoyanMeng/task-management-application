        <activity android:name=".ui.taskList.main.CreateTask"></activity>
        <activity android:name=".ui.taskList.main.UploadFile"></activity>
        <activity android:name=".ui.taskList.main.UploadImage"></activity>
        <activity android:name=".ui.auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.projectList.ProjectListActivity" />
